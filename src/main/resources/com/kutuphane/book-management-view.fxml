<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.FlowPane?>

<AnchorPane prefHeight="650.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kutuphane.controller.BookController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="Kitap Yönetimi ve Envanter" style="-fx-font-weight: bold; -fx-font-size: 18;" />

                <VBox spacing="10.0" styleClass="form-container">
                    <Label fx:id="formTitle" text="Yeni Kitap Kaydı / Güncelleme" style="-fx-font-weight: bold; -fx-font-size: 14;" />

                    <HBox spacing="10.0">
                        <TextField fx:id="txtTitle" promptText="Başlık" prefWidth="250.0" />
                        <TextField fx:id="txtAuthor" promptText="Yazar" prefWidth="250.0" />
                    </HBox>

                    <HBox spacing="10.0">
                        <TextField fx:id="txtPublisher" promptText="Yayıncı" prefWidth="250.0" />
                        <TextField fx:id="txtYear" promptText="Yayın Yılı" prefWidth="250.0" />
                    </HBox>

                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <TextField fx:id="txtISBN" promptText="ISBN" prefWidth="180.0" />
                        <TextField fx:id="txtQuantity" promptText="Toplam Adet" prefWidth="120.0" />
                        <TextField fx:id="txtLocation" promptText="Raf Konumu" prefWidth="150.0" />

                        <Button mnemonicParsing="false" text="Ekle" onAction="#handleSaveBook" styleClass="add-button" />
                        <Button mnemonicParsing="false" text="Güncelle" onAction="#handleSaveBook" />
                        <Button mnemonicParsing="false" text="Temizle" onAction="#handleClearForm" />
                    </HBox>
                </VBox>

                <VBox VBox.vgrow="ALWAYS" spacing="10.0" styleClass="form-container">
                    <Label text="Kayıtlı Kitaplar Envanteri (Kartlar)" style="-fx-font-weight: bold; -fx-font-size: 14;" />

                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                        <content>
                            <FlowPane fx:id="bookCardFlowPane" hgap="15" vgap="15" alignment="TOP_LEFT" styleClass="card-view-pane">
                                <padding><Insets top="5" right="5" bottom="5" left="5"/></padding>
                            </FlowPane>
                        </content>
                    </ScrollPane>

                    <Button mnemonicParsing="false" text="Seçileni Sil" onAction="#handleDeleteBook" styleClass="exit-button" />
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
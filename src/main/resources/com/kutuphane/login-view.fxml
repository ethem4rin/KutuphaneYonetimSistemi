<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="login-root" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kutuphane.controller.LoginController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <children>
        <VBox alignment="CENTER" prefHeight="370.0" prefWidth="308.0" spacing="15.0" styleClass="login-pane" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="15.0">
            <Label styleClass="login-header" text="Kütüphane Girişi" />

            <TextField fx:id="txtUsername" promptText="Kullanıcı Adı" />
            <PasswordField fx:id="txtPassword" promptText="Şifre" />

            <Button fx:id="btnLogin" defaultButton="true" mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" text="Giriş Yap" styleClass="login-button">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </children>
</AnchorPane>